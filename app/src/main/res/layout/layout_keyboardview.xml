<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.hxzj.inputkeyboard.Keyboard.CustomKeyBoardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/keyboardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/custom_key_line"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:keyBackground="@drawable/bg_custom_key_white"
        android:keyTextColor="@color/custom_key_black"
        android:keyTextSize="@dimen/keyboard_text_size"
        android:paddingTop="1dp"
        android:shadowColor="@color/custom_key_white"
        android:shadowRadius="0.0" />

</FrameLayout>



