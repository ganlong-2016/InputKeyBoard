<?xml version="1.0" encoding="utf-8"?>
<Keyboard xmlns:android="http://schemas.android.com/apk/res/android"
    android:horizontalGap="1dp"
    android:keyHeight="53dp"
    android:keyWidth="20%p"
    android:verticalGap="1dp">
    <Row android:layout_marginBottom="10dp">
        <Key
            android:codes="@integer/keycode_stock_num_all"
            android:keyLabel="全仓" />
        <Key
            android:codes="49"
            android:keyLabel="1" />
        <Key
            android:codes="50"
            android:keyLabel="2" />
        <Key
            android:codes="51"
            android:keyLabel="3" />
        <Key
            android:codes="@integer/keycode_delete"
            android:isRepeatable="true"
            android:keyEdgeFlags="right"
            android:keyIcon="@drawable/delete" />
    </Row>
    <Row>
        <Key
            android:codes="@integer/keycode_stock_num_half"
            android:keyLabel="半仓" />
        <Key
            android:codes="52"
            android:keyLabel="4" />
        <Key
            android:codes="53"
            android:keyLabel="5" />
        <Key
            android:codes="54"
            android:keyLabel="6" />
        <Key
            android:codes="@integer/keycode_clear"
            android:keyLabel="清空" />
    </Row>
    <Row>
        <Key
            android:codes="@integer/keycode_stock_num_1_3"
            android:keyLabel="1/3仓" />
        <Key
            android:codes="55"
            android:keyLabel="7" />
        <Key
            android:codes="56"
            android:keyLabel="8" />
        <Key
            android:codes="57"
            android:keyLabel="9" />
        <Key
            android:codes="@integer/keycode_hide"
            android:keyIcon="@drawable/hide" />
    </Row>
    <Row>
        <Key
            android:codes="@integer/keycode_stock_num_1_4"
            android:keyLabel="1/4仓" />
        <Key
            android:codes="@integer/keycode_00"
            android:keyLabel="00" />
        <Key
            android:codes="48"
            android:keyLabel="0" />
        <Key android:codes="@integer/keycode_useless"/>
        <Key
            android:codes="@integer/keycode_determine"
            android:iconPreview="@drawable/bg_custom_key_blue"
            android:keyEdgeFlags="right"
            android:keyLabel="确定" />
    </Row>
</Keyboard>  
